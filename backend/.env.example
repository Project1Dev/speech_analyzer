# Speech Mastery Backend Configuration

# Database Configuration
DATABASE_URL=postgresql+psycopg://speech_mastery:speech_mastery_password@localhost:5432/speech_mastery

# Authentication (single-user prototype)
SINGLE_USER_TOKEN=SINGLE_USER_DEV_TOKEN_12345

# File Upload Configuration
UPLOAD_DIR=/tmp/speech_mastery_uploads
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# Service Configuration
TRANSCRIPTION_SERVICE=whisper  # Options: mock, whisper
NLP_SERVICE=basic  # Options: basic, spacy, openai

# Whisper Configuration
WHISPER_MODEL_SIZE=base  # Options: tiny, base, small, medium, large
WHISPER_DEVICE=cpu  # Options: cpu, cuda
WHISPER_COMPUTE_TYPE=int8  # Options: int8, float16, float32
WHISPER_MODEL_DIR=./models  # Directory to cache downloaded models

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Environment Configuration
ENVIRONMENT=development  # Options: development, testing, production
DEBUG=true  # Set to false in production

# Logging Configuration
LOG_DIR=./logs  # Directory for log files
